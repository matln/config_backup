  "diagnostic-languageserver.filetypes": {
    "sh": "shellcheck",
    "python": "flake8"
  },
  "diagnostic-languageserver.formatFiletypes": {
    "sh": "shfmt",
    "python": ["black", "isort", "docformatter"]
  },
  "diagnostic-languageserver.formatters": {
    "black": {
      "command": "black",
      "args": ["-q", "-"]
    },
    "isort": {
      "command": "isort",
      "args": ["-q", "-"]
    },
    "docformatter": {
      "command": "docformatter",
      "args": ["-"]
    }
  },
   "diagnostic-languageserver.linters": {
    "flake8": {
      "sourceName": "flake8",
      "command": "flake8",
      "debounce": 200,
      "rootPatterns": [".git", "pyproject.toml", "setup.py"],
      "args": [
        "--ignore=E402,C901,W503,W504,E116,E702,C0103,C0114,C0115,C0116,C0103,C0301,W0613,W0102,R0903,R0902,R0914,R0915,R0205,W0703,W0702,W0603,E501",
        "--format=%(row)d,%(col)d,%(code).1s,%(code)s: %(text)s",
        "-"
      ],
      "offsetLine": 0,
      "offsetColumn": 0,
      "formatLines": 1,
      "formatPattern": [
        "(\\d+),(\\d+),([A-Z]),(.*)(\\r|\\n)*$",
        {
          "line": 1,
          "column": 2,
          "security": 3,
          "message": 4
        }
      ],
      "securities": {
        "W": "info",
        "E": "warning",
        "F": "info",
        "C": "info",
        "N": "hint"
      }
    }
  },
  //"python.formatting.provider": "black"
  //"explorer.root.strategies": ["cwd"],
  "explorer.trash.command": "trash-put --trash-dir=/data/lijianchen/.Trash --force-volume=/data %l",
  "explorer.icon.enableNerdfont": true,
  //"explorer.icon.source": "vim-devicons",
  //"explorer.git.showIgnored": false,
  "explorer.git.icon.status.ignored": " ",
  "explorer.file.hiddenRules": {
    "filenames": ["__pycache__"]
  },
  "explorer.keyMappings.global": {
      "m": "actionMenu",
      "E": "open:split",
      "s": "open:vsplit",
      "<cr>": [
        "expandable?",
        ["expanded?", "collapse", "expand"],
        "open"
      ],
      "l": [
        "expandable?",
        ["expanded?", "collapse", "expand"],
        "open"
      ],
      "C": ["wait", "cd"],
  }
}
